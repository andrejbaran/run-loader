{
    "name": "webpack-run-loader",
    "version": "0.1.0-beta.2",
    "description": "Webpack loader that executes previously exported function and exports/returns its result",
    "main": "dist/index.js",
    "repository": "git+ssh://github.com:andrejbaran/run-loader.git",
    "author": "Andrej Baran",
    "license": "MIT",
    "scripts": {
        "test": "jest",
        "prebuild": "shx rm -rf dist",
        "build": "tsc --project tsconfig.production.json --pretty",
        "dist": "yarn test && yarn build && yarn publish"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "src/*.ts"
        ],
        "mapCoverage": true,
        "transform": {
            "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
        },
        "testRegex": "test\\/.+\\.test\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ]
    },
    "devDependencies": {
        "@types/acorn": "^4.0.2",
        "@types/estraverse": "^0.0.6",
        "@types/estree": "^0.0.38",
        "@types/jest": "^21.1.4",
        "@types/loader-utils": "^1.1.0",
        "@types/node": "^8.0.44",
        "@types/webpack": "^3.0.13",
        "jest": "^21.2.1",
        "shx": "^0.2.2",
        "ts-jest": "^21.1.3",
        "typescript": "^2.5.3",
        "webpack": "^2.2.1"
    },
    "dependencies": {
        "acorn": "^5.1.2",
        "esquery": "^1.0.0",
        "estraverse": "^4.2.0",
        "loader-utils": "^1.1.0"
    }
}
